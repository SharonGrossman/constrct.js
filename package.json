{
  "name": "academy",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "build": "lerna exec --parallel -- babel --root-mode upward src -d lib",
    "coverage": "jest --coverage",
    "dev": "lerna exec --parallel -- yarn dev",
    "lint:js": "eslint . --ext .js --ignore-pattern lib --ignore-pattern node_modules",
    "lint:styles": "stylelint './src/**/*.js'",
    "lint": "yarn lint:js && yarn lint:styles",
    "prettier": "prettier --write \"**/*.{js,json,md,yml}\"",
    "lerna-publish": "lerna publish",
    "test": "yarn build && yarn lint && yarn coverage"
  },
  "description": "App",
  "main": "index.js",
  "repository": "https://github.com/SharonGrossman/academy.git",
  "author": "Sharon Grossman <sharong1337@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "husky": "^2.3.0",
    "lerna": "^3.14.1",
    "lint-staged": "^8.1.7",
    "prettier": "^1.17.1"
  }
}
