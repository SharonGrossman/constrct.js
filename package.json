{
  "name": "academy",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "build": "yarn clean && lerna exec --parallel -- yarn build",
    "dev": "lerna exec --parallel --no-bail -- yarn dev",
    "clean": "lerna exec --parallel -- yarn clean",
    "lint": "lerna exec --parallel -- yarn lint",
    "lerna-publish": "lerna publish",
    "test": "yarn lint",
    "prod:app": "yarn build && cd packages/server && node dist/app.js",
    "generate": ""
  },
  "description": "App",
  "main": "index.js",
  "repository": "https://github.com/SharonGrossman/academy.git",
  "author": "Sharon Grossman <sharong1337@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "eslint": "^6.3.0",
    "eslint-config-prettier": "^6.2.0",
    "eslint-config-sharongrossman": "^0.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-lodash": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-unicorn": "^11.0.0",
    "husky": "^3.0.5",
    "lerna": "^3.14.1",
    "lint-staged": "^9.2.5",
    "prettier": "^1.17.1",
    "rimraf": "^3.0.0"
  }
}
